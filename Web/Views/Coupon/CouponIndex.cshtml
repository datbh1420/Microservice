@using System.Globalization;
@model IEnumerable<CouponDTO>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Coupon List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-outline-primary" asp-controller="Coupon" asp-action="CreateCoupon">
                    <i class="bi bi-plus-square"></i>
                    Create New Coupon
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Coupon Code
                    </th>
                    <th>
                        Discount Amount
                    </th>
                    <th>
                        Minimum Amount
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Code
                        </td>
                        <td>
                            @string.Format(new CultureInfo("vi-VN"), "{0:c}", item.Discount)
                        </td>
                        <td>
                            @string.Format(new CultureInfo("vi-VN"), "{0:c}", item.MinAmount)
                        </td>
                        <td>
                            <a asp-controller="Coupon" asp-action="EditCoupon" asp-route-Code="@item.Code" class="btn btn-danger">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Coupon" asp-action="DeleteCoupon" asp-route-Code="@item.Code" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
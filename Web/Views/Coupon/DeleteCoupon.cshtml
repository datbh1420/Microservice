@using System.Globalization;
@model CouponDTO
@{
    ViewData["Title"] = "DeleteCoupon";
}



<form asp-action="DeleteCoupon">
    <br />
    <div class="container border pb-3">
        <h1 class="text-white text-center">Create Coupon</h1>
        <input asp-for="Id" hidden />
        <input asp-for="Code" hidden />
        <input asp-for="Discount" hidden />
        <input asp-for="MinAmount" hidden />
        <hr />
        <div class="row">
            <div class="col-3">
                <label class="control-label pt-2 text-white" style="font-size: 20px;">Coupon Code</label>
            </div>
            <div class="col-9 pb-3">
                <label class="control-label pt-2" style="font-size: 20px;">@string.Format(new CultureInfo("vi-VN"), "{0:c}", Model.Code)</label>
            </div>
            <div class="col-3">
                <label class="control-label pt-2 text-white" style="font-size: 20px;">Discount Amount</label>
            </div>
            <div class="col-9 pb-3">
                <label class="control-label pt-2" style="font-size: 20px;">@string.Format(new CultureInfo("vi-VN"), "{0:c}", Model.Discount)</label>
            </div>
            <div class="col-3">
                <label class="control-label pt-2 text-white" style="font-size: 20px;">Min Amount</label>
            </div>
            <div class="col-9 pb-3">
                <label class="control-label pt-2" style="font-size: 20px;">@string.Format(new CultureInfo("vi-VN"), "{0:c}", Model.MinAmount)</label>
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CouponIndex">Back to List</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Delete" class="btn btn-primary form-control" />
            </div>
        </div>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using System.Globalization;
@model IEnumerable<ProductDTO>
@{
    ViewData["Title"] = "ProductIndex";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Product List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-outline-primary" asp-controller="Product" asp-action="CreateProduct">
                    <i class="bi bi-plus-square"></i>
                    Create New Product
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        CategoryName
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @string.Format(new CultureInfo("vi-VN"), "{0:c}", item.Price)
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            <a asp-controller="Product" asp-action="EditProduct" asp-route-Id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-Id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>